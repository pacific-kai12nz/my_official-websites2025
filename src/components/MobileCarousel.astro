---
import { Image } from 'astro:assets'
import slide01 from '/public/images/ANOTHER-SKY-in-NZ.jpg'
import slide02 from '/public/images/important.png'
import slide03 from '/public/images/comigsoon.jpg'
import slide04 from '/public/images/comigsoon.jpg'
---

<div class="swiper">
  <div class="swiper-wrapper">
    <!-- Slideにリンクを追加 -->
    <div class="swiper-slide">
      <a href="/topicks">
        <Image src={slide01} alt="Slide 1" />
      </a>
    </div>
    <div class="swiper-slide">
      <a href="/topicks2">
        <Image src={slide02} alt="Slide 2" />
      </a>
    </div>
    <div class="swiper-slide">
      <a href="/link3">
        <Image src={slide03} alt="Slide 3" />
      </a>
    </div>
    <div class="swiper-slide">
      <a href="/link4">
        <Image src={slide04} alt="Slide 4" />
      </a>
    </div>
  </div>
  
  <div class="swiper-pagination"></div>
  <div class="swiper-scrollbar"></div>
</div>

<style>
  .swiper-wrapper {
    max-width: 200px;
    max-height: 500px;
    text-align: center;
  }

  .swiper-slide img {
    height: 200px;
    max-width: 100%;
    object-fit: cover;
  }

  a {
    display: inline-block;
    width: 100%;
    height: 100%;
  }

  .swiper-button::after {
    font-size: 32px;
    color: rgb(215, 119, 22);
  }
</style>

<script>
import Swiper from 'swiper'
import { Pagination, Autoplay } from 'swiper/modules'
import 'swiper/css/bundle'

export const swiperConfig = {
  modules: [Pagination, Autoplay],
  loop: true,
  autoplay: {
    delay: 2000,
    disableOnInteraction: false,
  },
  pagination: {
    el: '.swiper-pagination',
    clickable: true,
  },
}

const swiper = new Swiper('.swiper', swiperConfig)
</script>
