---
import "../../styles/global.css";
import Header from "../../components/HeaderComponents.astro";
import Footer from "../../components/FooterComponents.astro";
import SocialIcons2 from "../../components/SocialIcons2.astro";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faTwitter } from "@fortawesome/free-brands-svg-icons";
import { useTranslation } from 'astro-i18next';
const { t } = useTranslation(['biography']);
const profileList = t('profile', { returnObjects: true }) as unknown as string[];

---

<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{t('title')}</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
  <Header />
  <main>
    <section id="profile">
      <h1 class="biograhy">{t('title')}</h1>
    </section>

    <section class="picture"></section>

    <section class="photo">
      <a href="https://www.instagram.com/maya_tabidori">
        <p>{t('photo_by')}</p>
      </a>
    </section>

    <h2 class="name fade-up">{t('name')}</h2>

    <h5 class="txt fade-up">
      <ul>
        {profileList.map(item => (
          <li>{item}</li>
        ))}
      </ul>
    </h5>
  </main>

  <SocialIcons2 />
  <FontAwesomeIcon icon={faTwitter} size="2x" className="twitter-icon" client:load />
  <Footer />
  <script src="/scripts/textRandomAnime.js" is:inline defer></script>
</body>
</html>


<style>
    .biograhy {
        text-align: center;
        font-size: 50px;
        font-family: 'Oswald', sans-serif;
        margin-top: 120px;
        margin-bottom: 30px;
    }

.picture {
  background-image: url(/images/biography.JPG);
  width: 500px;
  height: 700px;
  margin-top: 20px;
  margin-bottom: 400px;
  margin: auto;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  align-items: center;
  background-position: center;
  border-radius: 5px;
  display: block;
}
.txt {
    margin-top: 30px;
    margin-bottom:40px ;
    display: flex;
    justify-content: center;
    font-family: 'Oswald', sans-serif;
}
.txt ul {
    text-align: left;
    list-style-position: inside;
}
.fade-up {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 1s ease-out forwards;
}

@keyframes fadeUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.photo {
    text-align: center;
    margin-left: 330px;
    font-family: 'Arial', sans-serif;
}
.twitter-icon {
    color: white;
    display: none;
}

@media screen and (max-width:600px) {
  .picture {
    width: 30vh;
    height: 40vh;
  }
}

.picture{
  animation-name:fadeUpAnime;
  animation-duration: .5s;
  animation-fill-mode:forwards;
  opacity:0;
  }

@media screen and (max-width: 800px) {
  p {
    text-align: right;
    margin-right: 30px;
  }
}

  @keyframes fadeUpAnime{
    from {
      opacity: 0;
    transform: translateY(100px);
    }
  
    to {
      opacity: 1;
    transform: translateY(0);
    }
  }

.biograhy span{
	opacity: 0;
}
.biograhy.appearRandomtext span{ 
	animation:text_randomanime_on .5s ease-out forwards;
}

@keyframes text_randomanime_on {
	0% {opacity:0;}
	100% {opacity:1;}
}

.biograhy.appearRandomtext span:nth-child(2n) {
	animation-delay: .5s;
}
.biograhy.appearRandomtext span:nth-child(3n+1) {
	animation-delay: .15s;
}

.name {
  text-align: center;
  font-size: 50px;
  margin-top: 30px;
  font-family: 'Oswald', sans-serif;
  padding-bottom: 0%;
}

.main {
  padding-top: 30px;
  padding-bottom: 100px;
}

/* スマホ表示（480px以下） */
@media screen and (max-width: 480px) {
  .biograhy{
    font-size: 40px;
  }
  .picture {
    width: 90%;
    height: 50vh;
  }

  .photo {
    font-size: 12px;
    margin: 0;
    text-align: center;
  }

  .name {
    font-size: 30px;
    margin-top: 20px;
  }

  .txt {
    font-size: 12px;
    padding: 0 15px;
    margin-bottom: 20px;
  }

  .main {
    padding-bottom: 50px;
  }

  p {
    text-align: right;
    margin-right: 10px;
  }
}

</style>