---
import "../styles/global.css";
import Header from "../components/HeaderComponents.astro";
import Footer from "../components/FooterComponents.astro";
import SocialIcons2 from "../components/SocialIcons2.astro";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faTwitter } from "@fortawesome/free-brands-svg-icons";
import "../styles/global.css";
---
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CONTACT</title>
    <link rel="stylesheet" href="../styles/global.css">
</head>
<body>
    <Header></Header>
    <main>
        <section id="title">
            <h1 class="page-title">CONTACT</h1>
        </section>
        <section id="works">
            <button class="view-all" onclick="window.location.href='https://forms.gle/q4xSwoEFNzo9G48UA';">Click here to contact us</button>
        </section>
    </main>
    <SocialIcons2 />
    <Footer></Footer>
    <FontAwesomeIcon icon={faTwitter} size="2x" className="twitter-icon" client:load />
</body>
</html>


<style>
body {
    font-family: 'Oswald', sans-serif;
    background-color: white;
    color: black;
    text-align: center;
}

/* Title */
.page-title {
    text-align: center;
    font-size: 50px;
    padding: 60px 0;
    margin-top: 50px;
}

#works {
    display: flex;
    /* justify-content: center; */
    align-items: center;
}

#works h2 {
    font-size: 50px;
    margin-bottom: 20px; 
}

.view-all {
    display: block;
    width: 180px;
    margin: 10px auto; 
    padding: 5px;
    font-size: 16px;
    color: white;
    background: linear-gradient(to right, lightblue, lightcoral);
    border: none;
    border-radius: 20px;
    cursor: pointer;
    margin-top: 200px;
}
.button-container {
    display: flex;
    gap: 20px;
    align-items: center;
    /* margin-top: 500px; */
}
/* ホバー時のアニメーション */
.view-all:hover {
    transform: scale(1.1); 
    background: linear-gradient(to right, lightcoral, lightblue);
}
/* クリック時のアニメーション */
.view-all:active {
    transform: scale(0.9);
    opacity: 0.8;
}

html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
}

main {
    flex: 1;
}

footer {
    background-color: black;
    text-align: center;
    color: white;
    font-size: 15px;
    font-family: 'Oswald', sans-serif;
    padding: 20px;
    width: 100%;
}

/* Twitter Icon */
.twitter-icon {
    color: white;
    display: none;
}
</style>