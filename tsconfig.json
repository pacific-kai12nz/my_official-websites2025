{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@locales/*": ["src/locales/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  }
}
